            <Button Template="{StaticResource MaxBtn}" Margin="510,0,0,0" x:Name="MaxBtn" Visibility="Collapsed"/>
            <Button Template="{StaticResource MinBtn}" Margin="540,0,0,0" x:Name="MinBtn" Click="MinBtn_Click"/>
            <Button Template="{StaticResource CloseBtn}" Margin="5,0,0,0" x:Name="CloseBtn" Click="CloseBtn_Click"/>
        </StackPanel>
        <StackPanel  Grid.Row="1" Background="#e6e6e6">
