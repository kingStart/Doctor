<Window x:Class="Doctor.YpExplain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctor"
        mc:Ignorable="d"
        WindowStyle="None" AllowDrop="True" ResizeMode="NoResize"   BorderThickness="0"  Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F8F8F8 " >
            <Label x:Name="titleLabel" FontWeight="Bold"  Margin="0,0,0,0.4" HorizontalContentAlignment="Left"    FontSize="15" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="30"   Width="417">药品说明</Label>

            <Button   Template="{StaticResource CloseWindwoBtn}" Margin="360,0,0,0" />
        </StackPanel>
        <StackPanel  Grid.Row="1" Background="#e6e6e6">
            <Label MaxWidth="800" FontSize="15" Margin="0,10,0,0" Padding="20,0,0,0">
                <TextBlock TextWrapping="Wrap"
    Text="  在此输入要换行的文字，前提是它足够长，并且Label的MaxWidth不足以让它一行显示。" />
            </Label>
        </StackPanel>
       
    </Grid>
</Window>
