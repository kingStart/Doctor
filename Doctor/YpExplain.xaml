<Window x:Class="Doctor.YpExplain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctor"
        mc:Ignorable="d"
        WindowStyle="None" AllowDrop="True" Loaded="Window_Loaded"  ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown"   BorderThickness="0"  Height="760" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F8F8F8 " >
            <Label x:Name="titleLabel" FontWeight="Bold"  Margin="16,0,0,0" HorizontalContentAlignment="Left"    FontSize="15" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="30"   Width="417">药品说明</Label>

            <Button  Click="Button_Click"  Template="{StaticResource CloseWindwoBtn}" Margin="440,0,0,0" />
        </StackPanel>
        <ScrollViewer  Grid.Row="2" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="120"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Label Height="35" Width="260" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" VerticalContentAlignment="Center" VerticalAlignment="Center">基本信息</Label>

                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Label Height="30" x:Name="BieMing" Width="900" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left"  VerticalContentAlignment="Center" VerticalAlignment="Center"></Label>
                    <Label Height="30" x:Name="JiXing" Width="900" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left"  VerticalContentAlignment="Center" VerticalAlignment="Center"></Label>
                    <Label Height="30" x:Name="GuiGe" Width="900" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left"  VerticalContentAlignment="Center" VerticalAlignment="Center"></Label>
                    <Label Height="30" x:Name="XingZhuang" Width="900" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left"  VerticalContentAlignment="Center" VerticalAlignment="Center"></Label>

                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Label Height="35" Width="260" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" VerticalContentAlignment="Center" VerticalAlignment="Center">适应症</Label>

                </StackPanel>
                <StackPanel  Grid.Row="3" Width="900" Height="100" >
                    <Label MaxWidth="900" FontSize="14" Margin="0,10,0,0" Padding="20,0,0,0">
                        <TextBlock x:Name="ShiYing" TextWrapping="Wrap" Text="" />
                    </Label>
                </StackPanel>

                <StackPanel Grid.Row="4">
                    <Label Height="35" Width="260" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" VerticalContentAlignment="Center" VerticalAlignment="Center">不良反应</Label>

                </StackPanel>
                <ScrollViewer  Grid.Row="5" Width="900" Height="100" BorderBrush="Brown" BorderThickness="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Label MaxWidth="860" FontSize="14" Margin="0,10,0,0" Padding="20,0,0,0">
                        <TextBlock x:Name="BuLiang" TextWrapping="Wrap" Text="" />
                    </Label>
                </ScrollViewer>
                <StackPanel Grid.Row="6">
                    <Label Height="35" Width="260" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" VerticalContentAlignment="Center" VerticalAlignment="Center">使用说明</Label>

                </StackPanel>
                <StackPanel  Grid.Row="7" Width="900" Height="100" >
                    <Label MaxWidth="860" FontSize="14" Margin="0,10,0,0" Padding="20,0,0,0">
                        <TextBlock x:Name="ShuoMing" TextWrapping="Wrap" Text="" />
                    </Label>
                </StackPanel>
                <StackPanel Grid.Row="8">
                    <Label Height="35" Width="260" FontSize="14" Padding="20,0,0,0"  HorizontalAlignment="Left" FontWeight="Bold" VerticalContentAlignment="Center" VerticalAlignment="Center">禁忌症</Label>

                </StackPanel>
                <StackPanel  Grid.Row="9" Width="900" Height="100"   >
                    <Label MaxWidth="860" FontSize="14" Margin="0,10,0,0" Padding="20,0,0,0">
                        <TextBlock x:Name="Jinji" TextWrapping="Wrap" Text="" />
                    </Label>
                </StackPanel>
            </Grid>
          
        </ScrollViewer>
       
    </Grid>
</Window>
